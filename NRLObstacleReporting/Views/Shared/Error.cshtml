@model ErrorViewModel
@{
ViewData["Title"] = "Error";
}
<div class="container mx-auto py-16 px-4">
    <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-8 border border-gray-300">
        <div class="text-center mb-6">
            <h1 class="text-4xl font-bold text-red-600">Error</h1>
            <h2 class="text-lg font-semibold text-gray-700 mt-2">
                An error occurred while processing your request.
            </h2>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
            @if (!string.IsNullOrEmpty(Model.HttpStatusCode))
            {
                <p class="text-gray-800 text-sm mb-2">
                    <strong class="font-medium text-gray-600">HTTP Response:</strong>
                    <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded">@Model.HttpStatusCode</span>
                </p>
            }
            @if (Model.ShowRequestId)
            {
                <p class="text-gray-800 text-sm mb-2">
                    <strong class="font-medium text-gray-600">Request ID:</strong>
                    <code class="bg-gray-100 text-gray-800 px-2 py-1 rounded">@Model.RequestId</code>
                </p>
            }
            <hr class="my-2"/>
            @if (!string.IsNullOrEmpty(Model.ExceptionType))
            {
                <p class="text-gray-800 text-sm mb-2">
                    <strong class="font-medium text-gray-600">Exception Type:</strong>
                    <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded">@Model.ExceptionType</span>
                </p>
            }
            @if (!string.IsNullOrEmpty(Model.ExceptionMessage))
            {
                <p class="text-gray-800 text-sm">
                    <strong class="font-medium text-gray-600">Exception Message:</strong>
                    <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded block mt-2">
                            @Model.ExceptionMessage
                        </span>
                </p>
            }
        </div>
        <p class="text-gray-600 text-base mt-6">
            Swapping to the <strong class="font-medium text-gray-800">Development</strong> environment will display
            more detailed information about the error that occurred.
        </p>
        <div class="text-center mt-6">
            <a href="/" class="inline-block bg-blue-600 text-white text-sm px-4 py-2 rounded hover:bg-blue-500">
                Go Back to Home
            </a>
        </div>
    </div>
</div>