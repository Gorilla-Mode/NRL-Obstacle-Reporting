@{
    ViewData["Title"] = "Log in page";
}
<div class="flex flex-col items-center justify-start min-h-screen pt-8 pb-20 relative z-10">
    <div class="bg-gradient-to-b from-white to-blue-50/30 bg-white/90 backdrop-blur-sm rounded-3xl shadow-[0_10px_40px_rgba(0,0,0,0.1)] p-10 sm:p-12 text-center 
                w-full max-w-2xl sm:max-w-lg mx-auto space-y-10 transition-all">
        <header class="space-y-2">
            <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 tracking-tight">Welcome!</h1>
            <p class="text-lg sm:text-xl text-gray-600">Please log in</p>
        </header>
        <div class="grid gap-8"> <!-- Pilot box -->
            <a asp-controller="Pilot" asp-action="PilotIndex"
               class="block w-full rounded-2xl py-6 sm:py-7 px-6 border-2 border-blue-600
                      bg-blue-50 hover:bg-blue-100 hover:shadow-[0_0_10px_rgba(37,99,235,0.3)]
                      hover:scale-[1.02] active:scale-[0.98] active:translate-y-[1px]
                      text-blue-700 font-semibold text-xl sm:text-2xl transition-all duration-200 ease-out">
                Log in as Pilot
            </a>
            <a asp-controller="Registrar" asp-action="RegistrarViewReports"
               class="block w-full rounded-2xl py-6 sm:py-7 px-6 border-2 border-blue-600
                      bg-blue-50 hover:bg-blue-100 hover:shadow-[0_0_10px_rgba(37,99,235,0.3)]
                      hover:scale-[1.02] active:scale-[0.98] active:translate-y-[1px]
                      text-blue-700 font-semibold text-xl sm:text-2xl transition-all duration-200 ease-out">
                Log in as Registrar
            </a> <!-- Registrar box -->
        </div>
    </div>
</div>