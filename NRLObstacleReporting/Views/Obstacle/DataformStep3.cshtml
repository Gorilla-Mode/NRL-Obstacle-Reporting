@model NRLObstacleReporting.Models.ObstacleStep3Model

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="text-center content-center">
    <h1 class="display-4">Describe your obstacle</h1>
    <form asp-action="DataformStep3" method="post">
        <input asp-for="ObstacleId" type="hidden" value="@TempData.Peek("id")" />
        
        <!-- Obstacle Information Section -->
        <div class="mt-10 space-y-6">

        <!-- Obstacle Name -->
        <div>
            <label for="obstaclename" class="block text-sm font-semibold text-gray-800 mb-2">
                Obstacle Name
            </label>
            <textarea id="obstaclename"
                  name="obstaclename"
                  rows="1"
                  class="block w-full rounded-md border-2 border-blue-500 bg-white px-3 py-2 text-base text-gray-900 
                         placeholder:text-gray-400 focus:border-blue-500 focus:ring focus:ring-indigo-200 sm:text-sm">
        </textarea>
        </div>

        <!-- Obstacle Description -->
        <div>
        <label for="obstacledescription" class="block text-sm font-semibold text-gray-800 mb-2">
            Obstacle Description
        </label>
        <textarea id="obstacledescription"
                  name="obstacledescription"
                  rows="3"
                  class="block w-full rounded-md border-2 border-blue-500 bg-white px-3 py-2 text-base text-gray-900 
                         placeholder:text-gray-400 focus:border-blue-500 focus:ring focus:ring-indigo-200 sm:text-sm">
        </textarea>

       </div>
        <div class="">
            <label asp-for="ObstacleIlluminated"></label>
            <div class="divide-x-0 grid grid-cols-2 w-1/2 mx-auto">
                <button type="button" id="illuminated-yes" class="but rounded-l-lg p-2 font-semibold text-white bg-blue-500 hover:bg-blue-700 transition-colors duration-200 mb-2">Med lys</button>
                <button type="button" id="illuminated-no" class="but rounded-r-lg p-2 font-semibold text-white bg-blue-500 hover:bg-blue-700 transition-colors duration-200 mb-2">Uten lys</button>
                <input type="hidden" asp-for="ObstacleIlluminated" id="ObstacleIlluminated"/>
            </div>
            <button class="inline-block items-center rounded-lg py-3 px-6 font-semibold text-white bg-blue-500 hover:bg-blue-700 transition-colors duration-200"
                    type="submit" formaction="/Obstacle/DataformStep3" id="Submit">Submit Report</button>
            <button class="inline-block items-center rounded-lg py-3 px-6 font-semibold text-white bg-blue-500 hover:bg-blue-700 transition-colors duration-200"
                    type="submit" formaction="/Obstacle/DataformStep3" id="SaveDraft">Save Draft</button>
            <input type="hidden" asp-for="IsDraft" id="IsDraft"/>
        </div>
        </div>
    </form>
</div>
  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ColorActiveButton.js"></script>
    <script>
        //Sets the value of illuminated
        AssignValueByID('illuminated-yes', 'ObstacleIlluminated', true)
        AssignValueByID('illuminated-no', 'ObstacleIlluminated', false)
        
        //save or submit as draft
        AssignValueByID('SaveDraft', 'IsDraft', true)
        AssignValueByID('Submit', 'IsDraft', false)

        ColorActiveButton('bg-blue-200', 'bg-blue-500')
    </script>
}