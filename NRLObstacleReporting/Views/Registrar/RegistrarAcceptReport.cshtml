@model ObstacleCompleteModel
@{
    Layout = "~/Views/Shared/_LayoutRegistrar.cshtml";
}

<h2 class="text-xl font-bold mb-4">Report Details</h2>

<div class="bg-white p-6 rounded shadow text-sm text-gray-900">
    <p>Email           Phonenumber             Organization</p>
    <div class="grid grid-cols-2 gap-6">
        <div>
            <span class="font-semibold text-gray-700">Name</span><br/>
            <span>@Model.Name</span>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Type</span><br/>
            <span>@Model.Type</span>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Height</span><br/>
            <span>@Model.HeightMeter m</span>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Illuminated</span><br/>
            <span>@Model.Illuminated</span>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Marked</span><br/>
            <span>@Model.Marking</span>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Status</span><br/>
            <span class="text-yellow-400 font-semibold">Pending</span>
        </div>
    </div>
</div>


<div class="flex gap-4 m-4">

    <!-- Attachments-boksen -->
    <div class="box-border rounded-lg h-auto w-[26rem] p-4 border-2 border-blue-500">
        <p class="font-semibold mb-3">Attachments</p>

        <div class="flex gap-2 w-full">
            <div class="box-border rounded-lg h-12 w-28 p-2 border-2 border-blue-500 flex items-center justify-center">
                <p class="text-sm font-semibold">Upload</p>
            </div>
            <div class="box-border rounded-lg h-12 w-28 p-2 border-2 border-blue-500 flex items-center justify-center">
                <p class="text-sm font-semibold">Preview</p>
            </div>
            <div class="box-border rounded-lg h-12 w-28 p-2 border-2 border-blue-500 flex items-center justify-center">
                <p class="text-sm font-semibold">Download</p>
            </div>
            <div class="box-border rounded-lg h-12 w-28 p-2 border-2 border-blue-500 flex items-center justify-center">
                <p class="text-sm font-semibold">Delete</p>
            </div>
        </div>
    </div>
        <!-- Status-knapper horisontalt -->
        <div class="flex gap-2 mt-4">
            <button class="rounded-lg h-16 w-32 p-2 font-semibold  text-black bg-red-400 text-sm">
                Accept
            </button>
            <button class="rounded-lg h-16 w-32 p-2 font-semibold  text-black bg-yellow-400 text-sm">
                Pending
            </button>
            <button class="rounded-lg h-16 w-32 p-2 font-semibold text-black  bg-green-400 text-sm">
                Reject
            </button>
        </div>
    </div>




    