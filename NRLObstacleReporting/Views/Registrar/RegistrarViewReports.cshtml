@{
    ViewData["Title"] = "View Reports";
    var obstacles = (IEnumerable<ObstacleCompleteModel>)ViewData["reports"]!;
    var obstacleCompleteModels = obstacles as ObstacleCompleteModel[] ?? obstacles.ToArray();
}

@if (obstacleCompleteModels.Count() == 0)
{
    <div class="text-center py-12">
        <h1 class="text-2xl font-semibold text-gray-700">No obstacles registered</h1>
    </div>
}

else
{
    <div class="bg-white">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Registered reports:</h1>
        <div class="flex w-full gap-4 pt-4 mb-6"> <!-- 4 rektangel  -->
            <form asp-action="ListReports" asp-controller="Registrar" method="get"  class="flex-1 rounded-lg py-3 px-6 font-semibold text-black bg-white border-2 border-blue-500 hover:bg-blue-700 text-center transition-colors duration-200">
                <input type="hidden" name="status" value="@ObstacleCompleteModel.ObstacleStatus.Pending"/>
                <input type="hidden" name="status" value="@ObstacleCompleteModel.ObstacleStatus.Approved"/>
                <input type="hidden" name="status" value="@ObstacleCompleteModel.ObstacleStatus.Rejected"/>
                <input type="hidden" name="status" value="@ObstacleCompleteModel.ObstacleStatus.Deleted"/>
                <button type="submit" style="margin-left: -1.5rem; width: calc(100% + 3rem); margin-top: -1.125rem; height: calc(100% + 2.5rem)"> <!-- ignore padding of parent class, if padding is updated make sure rems here match -->
                    All
                </button>
            </form>
            <a asp-action="ListReports" asp-route-status="@ObstacleCompleteModel.ObstacleStatus.Pending" asp-controller="Registrar"
               class="flex-1 rounded-lg py-3 px-6 font-semibold text-black bg-white border-2 border-blue-500 hover:bg-blue-700 text-center transition-colors duration-200">
                Pending
            </a>
            <a asp-action="ListReports" asp-route-status="@ObstacleCompleteModel.ObstacleStatus.Approved" asp-controller="Registrar"
               class="flex-1 rounded-lg py-3 px-6 font-semibold text-black bg-white border-2 border-blue-500 hover:bg-blue-700 text-center transition-colors duration-200">
                Approved
            </a>
            <a asp-action="ListReports" asp-route-status="@ObstacleCompleteModel.ObstacleStatus.Rejected" asp-controller="Registrar"
               class="flex-1 rounded-lg py-3 px-6 font-semibold text-black bg-white border-2 border-blue-500 hover:bg-blue-700 text-center transition-colors duration-200">
                Rejected
            </a>
        </div>
    </div>
    <div class="flex flex-wrap gap-4 w-full mb-6 px-4 md:px-6">
        <select class=" flex-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block p-2.5"> <!-- Type Dropdown -->
            <option selected>Type</option>
            <option>Aerial Span</option>
            <option>Building</option>
            <option>Bridge</option>
            <option>Pole/Tower</option>
            <option>Construction</option>
            <option>Other</option>
        </select>
        <select class="flex-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block  p-2.5"> <!-- Organization Dropdown -->
            <option selected>Organization</option>
            <option>Første gangs tjeneste</option>
        </select>
        <select class="flex-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block  p-2.5"> <!-- Status -->
            <option selected>Status</option>
            <option>Approved</option>
            <option>Pending</option>
            <option>Rejected</option>
        </select>
        <select class="flex-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block  p-2.5"> <!-- Org View -->
            <option selected>Org View</option>
            <option>balbalabla</option>
        </select>
        <div class="relative flex-1 min-w-0"> <!-- Calender -->
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                </svg>
            </div>
            <input id="datepicker-format" datepicker datepicker-format="mm-dd-yyyy" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Select date">
        </div>
        <div class="relative flex-1 min-w-0"> <!-- Calender -->
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                </svg>
            </div>
            <input id="datepicker-format" datepicker datepicker-format="mm-dd-yyyy" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Select date">
        </div>
    </div>
    <div class="flex items-center gap-4 mb-6"> <!-- search  -->
        <div class="flex-1 flex rounded-full border-2 border-blue-500 overflow-hidden">
            <input type="text" placeholder="Search Something..." class="w-full outline-none bg-white text-sm px-5 py-3" id="search"/>
        </div>
        <div>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block w-32 p-2.5"> <!-- Date -->
                <option selected>Date</option>
                <option>Dato</option>
            </select>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block w-32 p-2.5"> <!-- type -->
                <option selected>Type </option>
                <option>Aerial Span</option>
                <option>Building</option>
                <option>Bridge</option>
                <option>Pole/Tower</option>
                <option>Construction</option>
                <option>Other</option>
            </select>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block w-32 p-2.5"> <!-- Org -->
                <option selected>Org</option>
                <option>Første gangstjenesten</option>
            </select>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 inline-block w-32 p-2.5"> <!-- Status -->
                <option selected>Status</option>
                <option>Approved</option>
                <option>Pending</option>
                <option>Rejected</option>
            </select>
        </div>
    </div>
    <table class="border-collapse border border-gray-400 w-full text-left text-sm mt-6"> <!-- tabell -->
        <thead class="bg-gray-200">
        <tr>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Name</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Type</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Obstacle ID</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Height</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Coordinates</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Illuminated</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Marked</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700">Description</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700 text-center">Status</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700 text-center">Date Created</th>
            <th class="border border-gray-300 px-4 py-2 font-semibold text-gray-700 text-center">Last modified</th>
        </tr>
        </thead>
        <tbody id="table" class="bg-white">
        @foreach (var o in obstacleCompleteModels)
        {
            <tr class="cursor-pointer hover:bg-gray-100 transition"
                onclick=@($"window.location.href='{Url.Action("RegistrarAcceptReport", "Registrar", new { id = o.ObstacleId })}'")>
                <td class="border border-gray-300 px-4 py-2">@o.Name</td>
                <td class="border border-gray-300 px-4 py-2">@o.Type</td>
                <td class="border border-gray-300 px-4 py-2">@o.ObstacleId</td>
                <td class="border border-gray-300 px-4 py-2">@o.HeightMeter</td>
                <td class="border border-gray-300 px-4 py-2">@o.GeometryGeoJson</td>
                <td class="border border-gray-300 px-4 py-2">@o.Illuminated</td>
                <td class="border border-gray-300 px-4 py-2">@o.Marking</td>
                <td class="border border-gray-300 px-4 py-2">@o.Description</td>
                <td class="border border-gray-300 px-4 py-2 text-center">@o.Status</td>
                <td class="border border-gray-300 px-4 py-2 text-center">@o.CreationTime</td>
                <td class="border border-gray-300 px-4 py-2 text-center">@o.UpdatedTime</td>
            </tr>
        }
        </tbody>
    </table>
    <body class="text-top-left"> <!-- Assigned Tasks -->
    <div class="box-border rounded-lg h-32 w-[20rem] p-4 border-2 border-blue-500 m-4">
        <p class="font-semibold mb-3">Assigned Tasks</p>
        <div class="flex items-center gap-2 w-full mb-6"> <!-- Dropdown + Button side-by-side -->
            <select class="flex-grow h-10 bg-gray-50 border border-blue-500 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 p-2">
                <option selected>Registrar</option>
                <option>Jonathan</option>
            </select>
            <button type="button" class="text-white bg-blue-500 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Send</button>
        </div>
    </div>
    </body>
}
@section Scripts
{
    <script src="~/js/SearchTable.js"></script>
    <script>searchTable("table", "search")</script>
}
