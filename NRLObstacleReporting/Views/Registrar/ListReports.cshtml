@using Microsoft.CodeAnalysis
@model IEnumerable<ObstacleCompleteModel>
@{
    ViewData["Title"] = "View Reports";
    var obstacleCompleteModels = Model?.ToArray() ?? Array.Empty<ObstacleCompleteModel>();
}
@if (!obstacleCompleteModels.Any())
{
    <div class="text-center py-12">
        <h1 class="text-2xl font-semibold text-gray-700">No obstacles registered</h1>
    </div>
}
else
{
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Registered reports:</h1>

    <div class="relative overflow-x-auto bg-gray-100 shadow-sm rounded-lg border border-gray-300">
        <table class="w-full text-sm text-left rtl:text-right text-gray-800">
            <thead class="text-sm text-gray-800 bg-gray-200 border-b border-gray-300">
            <tr>
                <th scope="col" class="px-6 py-3 font-medium">
                    Date
                </th>
                <th scope="col" class="px-6 py-3 font-medium">
                    Type
                </th>
                <th scope="col" class="px-6 py-3 font-medium">
                    Height
                </th>
                <th scope="col" class="px-6 py-3 font-medium">
                    Name
                </th>
                <th scope="col" class="px-6 py-3 font-medium">
                    Status
                </th>
                <th scope="col" class="px-6 py-3 font-medium">
                    Details
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var report in obstacleCompleteModels)
            {
                <tr class=" cursor-pointer bg-gray-50 border-b border-gray-300 hover:bg-gray-100"
                    onclick=@($"window.location.href='{Url.Action("RegistrarAcceptReport", "Registrar", new { id = report.ObstacleId })}'")>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @report.CreationTime
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @report.Type
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @report.HeightMeter
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @report.Name
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @switch (report.Status)
                        {
                            case ObstacleCompleteModel.ObstacleStatus.Pending:
                                <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 border border-yellow-300"> Pending</span>
                                break;
                            case ObstacleCompleteModel.ObstacleStatus.Approved:
                                <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 border border-green-300">Approved</span>
                                break;
                            case ObstacleCompleteModel.ObstacleStatus.Rejected:
                                <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 border border-red-300">Rejected</span>
                                break;
                        }
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">                        <a asp-action="RegistrarAcceptReport" asp-route-id="@report.ObstacleId"
                           class="text-blue-600 underline text-sm">View details</a>
                    </td>
                </tr>

            }
            </tbody>
        </table>
    </div>
}
