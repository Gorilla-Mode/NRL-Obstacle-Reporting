@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="flex min-h-[70vh] items-start justify-center pt-10 bg-transparent">
    <div class="w-full max-w-xl rounded-3xl bg-white p-12 shadow-lg hover:shadow-2xl transition-shadow duration-300 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-sky-600 mb-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.707a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>

        <h2 class="text-3xl font-semibold text-gray-800 mb-2">Forgot Password Confirmation</h2>
        <p class="text-gray-500 text-sm mb-8">
            Please check your email for instructions on how to reset your password.
        </p>

        <a asp-controller="Account" asp-action="Login"
           class="inline-block rounded-lg bg-gradient-to-r from-sky-600 to-blue-500 px-6 py-2.5 text-white font-medium hover:from-sky-700 hover:to-blue-600 focus:ring-2 focus:ring-sky-300 transition-all duration-200">
            Back to Login
        </a>
    </div>
</div>